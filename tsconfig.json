{
  "compilerOptions": {
    "target": "ES6",                                 

    /* Modules */
    "module": "commonjs",                            
    "rootDir": "./src",                              

    /* Emit */
    "outDir": "./dist",                              

    /* Interop Constraints */
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,        

    /* Type Checking */
    "strict": true,                                      
    
    /* Completeness */
    "skipLibCheck": true                                 
  }
}
